# ===================================================================
# ðŸŽ® AutoGen DekuDeals - Environment Configuration Template
# Copy this file to .env and configure your settings
# ===================================================================

# ===================================================================
# Application Configuration
# ===================================================================
APP_ENV=development
VERSION=6.3.0

# ===================================================================
# OpenAI Configuration (REQUIRED)
# ===================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# ===================================================================
# Docker Build Configuration
# ===================================================================
BUILD_DATE=2024-01-15T10:30:00Z
VCS_REF=abc123ef

# ===================================================================
# Application Settings
# ===================================================================
# Number of worker processes (production)
WORKERS=2

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Maximum batch size for concurrent processing
MAX_BATCH_SIZE=10

# Cache TTL in seconds (default: 1 hour)
CACHE_TTL=3600

# ===================================================================
# API Configuration (for future use)
# ===================================================================
API_PORT=8000
API_HOST=0.0.0.0

# ===================================================================
# Production Volume Paths
# ===================================================================
# Absolute paths for production volume mounts
CACHE_VOLUME_PATH=/opt/autogen-dekudeals/cache
LOGS_VOLUME_PATH=/opt/autogen-dekudeals/logs
DATA_VOLUME_PATH=/opt/autogen-dekudeals/data

# ===================================================================
# Performance Tuning
# ===================================================================
# Advanced cache settings
CACHE_MEMORY_SIZE=100
CACHE_DISK_SIZE=1000

# Batch processing settings
BATCH_RATE_LIMIT=1.0
BATCH_MAX_CONCURRENT=3

# ===================================================================
# Security Settings (Production)
# ===================================================================
# Enable security features in production
SECURITY_ENABLED=true

# JWT secret for API authentication (future)
# JWT_SECRET=your-jwt-secret-here

# ===================================================================
# Monitoring and Health Checks
# ===================================================================
# Health check settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# ===================================================================
# Development Settings
# ===================================================================
# Enable debug mode (development only)
DEBUG=false

# Enable hot reload (development only)
HOT_RELOAD=false

# ===================================================================
# Database Configuration (future)
# ===================================================================
# DATABASE_URL=postgresql://user:password@localhost:5432/autogen_dekudeals
# REDIS_URL=redis://localhost:6379/0

# ===================================================================
# External Services
# ===================================================================
# DekuDeals scraping configuration
DEKUDEALS_BASE_URL=https://www.dekudeals.com
DEKUDEALS_USER_AGENT=AutoGen DekuDeals Bot/6.3.0

# Rate limiting for external requests
REQUESTS_PER_SECOND=1.0
REQUEST_TIMEOUT=30

# ===================================================================
# Feature Flags
# ===================================================================
# Enable/disable specific features
ENABLE_BATCH_PROCESSING=true
ENABLE_ADVANCED_CACHING=true
ENABLE_QUALITY_METRICS=true
ENABLE_API_ENDPOINTS=false

# ===================================================================
# Analytics and Metrics (future)
# ===================================================================
# ANALYTICS_ENABLED=false
# METRICS_ENDPOINT=http://localhost:9090
# SENTRY_DSN=your-sentry-dsn-here

# ===================================================================
# Development Tools
# ===================================================================
# Enable additional development features
ENABLE_PROFILING=false
ENABLE_DEBUG_LOGS=false 